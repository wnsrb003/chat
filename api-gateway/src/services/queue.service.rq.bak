import Redis from 'ioredis';
import { v4 as uuidv4 } from 'uuid';
import { config } from '../config';
import { logger } from '../utils/logger';

export interface TranslationJob {
  id: string;
  text: string;
  targetLanguages: string[];
  options?: {
    expandAbbreviations?: boolean;
    filterProfanity?: boolean;
    normalizeRepeats?: boolean;
    removeEmoticons?: boolean;
    fixTypos?: boolean;
  };
  createdAt: number;
}

export interface TranslationResult {
  id: string;
  originalText: string;
  preprocessedText: string;
  translations: Record<string, string>;
  detectedLanguage: string;
  processingTime: number;
  filtered: boolean;
  filterReason?: string;
}

class QueueService {
  private redis: Redis;
  private queueName: string;

  constructor() {
    this.redis = new Redis({
      host: config.redis.host,
      port: config.redis.port,
      password: config.redis.password,
    });

    this.queueName = config.queue.name;

    this.redis.on('error', (error) => {
      logger.error({ error }, 'Redis connection error');
    });

    this.redis.on('connect', () => {
      logger.info('Redis connected');
    });
  }

  async addJob(data: TranslationJob): Promise<{ id: string }> {
    const jobId = uuidv4();

    // RQ 포맷으로 작업 데이터 생성
    const rqJob = {
      created_at: new Date().toISOString(),
      data: JSON.stringify([data]), // RQ는 args를 배열로 받음
      description: `src.worker.process_translation_job(${JSON.stringify(data).substring(0, 50)}...)`,
      timeout: config.queue.timeout / 1000, // 초 단위
      result_ttl: 500,
      failure_ttl: 86400,
      ttl: -1,
      id: jobId,
      origin: this.queueName,
      enqueued_at: new Date().toISOString(),
    };

    // Redis에 작업 저장
    const jobKey = `rq:job:${jobId}`;
    await this.redis.hmset(jobKey, {
      created_at: rqJob.created_at,
      data: rqJob.data,
      description: rqJob.description,
      timeout: rqJob.timeout.toString(),
      result_ttl: rqJob.result_ttl.toString(),
      failure_ttl: rqJob.failure_ttl.toString(),
      ttl: rqJob.ttl.toString(),
      origin: rqJob.origin,
      enqueued_at: rqJob.enqueued_at,
      status: 'queued',
    });

    // 큐에 작업 ID 추가
    await this.redis.lpush(`rq:queue:${this.queueName}`, jobId);

    logger.info({ jobId, text: data.text }, 'Job added to RQ queue');

    return { id: jobId };
  }

  async getJobStatus(jobId: string): Promise<string | null> {
    const status = await this.redis.hget(`rq:job:${jobId}`, 'status');
    return status;
  }

  async getJobResult(jobId: string): Promise<TranslationResult | null> {
    const resultData = await this.redis.hget(`rq:job:${jobId}`, 'result');

    if (!resultData) {
      return null;
    }

    try {
      // RQ는 pickle을 사용하지만, 우리는 JSON으로 저장했다고 가정
      return JSON.parse(resultData);
    } catch (error) {
      logger.error({ error, jobId }, 'Failed to parse job result');
      return null;
    }
  }

  async waitForResult(jobId: string, timeout: number = config.queue.timeout): Promise<TranslationResult> {
    const startTime = Date.now();
    const pollInterval = 500; // 500ms마다 확인

    while (Date.now() - startTime < timeout) {
      const status = await this.getJobStatus(jobId);

      if (status === 'finished') {
        const result = await this.getJobResult(jobId);
        if (result) {
          return result;
        }
      }

      if (status === 'failed') {
        const errorMsg = await this.redis.hget(`rq:job:${jobId}`, 'exc_info');
        throw new Error(`Job failed: ${errorMsg || 'Unknown error'}`);
      }

      // 잠시 대기
      await new Promise(resolve => setTimeout(resolve, pollInterval));
    }

    throw new Error('Job timeout');
  }

  async getQueueStats() {
    const queueKey = `rq:queue:${this.queueName}`;
    const waiting = await this.redis.llen(queueKey);

    // RQ는 통계를 다르게 저장하므로 간단하게 반환
    return {
      waiting,
      active: 0, // RQ에서 직접 확인 어려움
      completed: 0,
      failed: 0,
      delayed: 0,
      total: waiting,
    };
  }

  async close() {
    await this.redis.quit();
    logger.info('Redis connection closed');
  }
}

export const queueService = new QueueService();
